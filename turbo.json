{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "example:nextjs": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "format": {
      "cache": true
    }
  }
}
